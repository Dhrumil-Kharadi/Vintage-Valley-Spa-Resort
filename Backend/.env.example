# Backend environment variables
# Copy this file to .env in the Backend folder and fill values.

PORT=5050
NODE_ENV=development
CLIENT_URL=http://localhost:8080

# Database
DATABASE_URL=postgresql://USER:PASSWORD@HOST:5432/DBNAME?schema=public

# Auth
JWT_SECRET=CHANGE_THIS_TO_A_LONG_RANDOM_STRING
JWT_EXPIRES_IN=7d
JWT_COOKIE_NAME=token
COOKIE_SECURE=false

# Razorpay (optional but required for online payments)
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=

# Email (SMTP / Gmail)
# Prefer SMTP in production. Gmail App Password also supported.

# SMTP (recommended)
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=

# Gmail (optional)
# Use a Google App Password (NOT your Gmail login password)
GMAIL_USER=
GMAIL_APP_PASSWORD=
EMAIL_FROM="Vintage Valley <yourgmail@gmail.com>"
# Reply-To is set dynamically to the customer's email after payment
EMAIL_REPLY_TO=

# Google OAuth (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URL=
